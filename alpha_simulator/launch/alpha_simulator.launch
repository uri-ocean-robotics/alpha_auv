<?xml version="1.0" encoding="utf-8"?>
<launch>

  <arg name="robot_name" default="alpha"/>
  <arg name="ground_truth" default="true"/>

  <param name="use_sim_time" type="bool" value="true"/>

  <group if="$(arg ground_truth)">
    <node
      pkg="tf2_ros"
      type="static_transform_publisher"
      name="sim_odom_world_tf_publisher"
      args="1 0 0 0 0 0 1 world_ned $(arg robot_name)/odom"/>
  </group>

  <node type="simulator_node" name="simulator_node" pkg="alpha_simulator" output="screen">
    <param name="tf_prefix" type="string" value="$(arg robot_name)"/>
  </node>

  <include file="$(find alpha_description)/launch/description.launch">
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find alpha_description)/rviz/config.rviz"/>

</launch>
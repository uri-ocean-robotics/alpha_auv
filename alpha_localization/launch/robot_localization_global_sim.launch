<?xml version="1.0"?>
<launch>

    <arg name="robot_name" default="alpha"/>

    <node name="navsat_transform" pkg="robot_localization" type="navsat_transform_node" output="screen">
        <rosparam command="load" file="$(find alpha_localization)/config/navsat.yaml"/>
        <param name="tf_prefix" type="string" value="$(arg robot_name)"/>
        <remap from="odometry/filtered" to="odometry/filtered/global" />
        <remap from="/imu/data" to="imu/data"/>
    </node>

    <node name="ekf_localization_global" pkg="robot_localization" type="ekf_localization_node" output="screen">
        <rosparam command="load" file="$(find alpha_localization)/config/robot_localization_global_sim.yaml"/>
        <param name="base_link_frame" type="string" value="$(arg robot_name)/base_link"/>
        <param name="odom_frame" type="string" value="$(arg robot_name)/odom"/>
        <param name="world_frame" type="string" value="map"/>
        <param name="map_frame" type="string" value="map"/>
        <remap from="odometry/filtered" to="odometry/filtered/global" />
    </node>

</launch>
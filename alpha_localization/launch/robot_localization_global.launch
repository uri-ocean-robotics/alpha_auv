<?xml version="1.0"?>
<launch>

    <arg name="robot_name" default="alpha"/>

    <arg name="navsat_transform_param" default="$(find alpha_localization)/config/navsat.yaml"/>

    <node name="gps_localization" pkg="robot_localization" type="navsat_transform_node" output="screen">
        <rosparam command="load" file="$(arg navsat_transform_param)"/>
        <remap from="odometry/filtered" to="odometry/local" />
    </node>

    <node name="alpha_localization_global" pkg="robot_localization" type="ekf_localization_node" output="screen">
        <rosparam command="load" file="$(find alpha_localization)/config/robot_localization_global.yaml"/>
        <param name="base_link_frame" type="string" value="$(arg robot_name)/base_link"/>
        <param name="odom_frame" type="string" value="$(arg robot_name)/odom"/>
        <param name="world_frame" type="string" value="$(arg robot_name)/odom"/>
        <remap from="odometry/filtered" to="odometry/global" />
        <remap from="accel/filtered" to="accel/global"/>

    </node>

</launch>